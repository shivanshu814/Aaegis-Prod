{
  "name": "aaegis",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "deploy:localnet": "pnpm --filter @aegis/program deploy:localnet",
    "deploy:devnet": "pnpm --filter @aegis/program deploy:devnet",
    "deploy:mainnet": "pnpm --filter @aegis/program deploy:mainnet"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.6.1",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
